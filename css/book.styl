/* might be part of general styles */
h2, h3, h4
	font-weight normal

@media (min-width: 1024px)
	.columns, .column 
		padding-left 0px
		padding-right 1.875em

	.row .row 
		margin-left 0px
		
	

/* end of might be part of general styles */	
.cover
	// background-color #f4f4f4;
	background-color #ccc
	padding 35px 0
	text-align center
	min-height 500px
	
	img
		width 85%
		height auto
		margin auto
		
		@media (min-width: 641px)
			width 70%
		
		@media (min-width: 768px) and (max-width:1023px)
			width 50%
.header .end
	@media (min-width:1920px)
		padding-left 2.43em
#slider
	@media (min-width: 1920px)
		padding-top 30px
		padding-bottom 30px
	
#slider .item
	@media (min-width: 1920px)
		width 40% !important
		height auto

.bookMainInfo
	padding 15px
	color #FFF
	min-height 27em
	font-family: 'Gotham Light'
	position relative
	margin-top 11px
	
	@media (max-width:320px)
		min-height 22em
		
	@media (min-width:641px)
		min-height 20em	
	
	@media (min-width:1024px)
		margin-top 45px
		
	@media (min-width:1280px)
		min-height 21.25em	
		
	
	.title
		font-size 2.68em
		text-transform uppercase
		line-height 1
		
	.subTitle
		font-size 1.25em
		text-transform uppercase
		letter-spacing 0.1em
		
		@media (min-width:640px)
			font-size 1.375em

	.author
		font-size 1.25em
		letter-spacing 0.1em
		position absolute
		bottom 20px;
		width 75%
		
		@media (max-width:320px)
			font-size 1.31em
			bottom 50px;
			
		@media (min-width:640px) and (max-width: 1024px)
			font-size 1.1em
			width 70%
	
		.subAuthor
			font-size 0.85em
			letter-spacing 0.1em
		
	.buy
		font-size 1.625em
		line-height 1		
		text-transform uppercase
		margin-bottom 0px
		position absolute
		bottom 20px
		right 20px
		
.header .bookMainInfo,
.header .bookDetails
	margin-top 0.6em
	min-height 350px
	padding-top 15px
	padding-bottom 15px
	
	@media (min-width:1280px)
		min-height 380px
	@media (min-width:1920px)
		margin-top 2.4em
		min-height 400px
		
.bookDetails
	color #FFF
	padding 12px 15px
	margin-top 11px
	
	@media (max-width:320px)
		margin-top 32px
		min-height 20em
	
	@media (max-width:640px)
		min-height 27em
		margin-top 34px
		
	@media (min-width:641px)
		min-height 20em
	
	@media (min-width:1024px)
		margin-top 45px
	
	ul
		margin auto 0
		padding 0
	
	ul li 
		list-style-type none
		margin 0.61em 0
		font-size 1.5em
		line-height 1
		
		@media (max-width:639px)
			font-size 1.1em
			
		@media (min-width:640px)
			font-size 1.3em
			
		@media (min-width:641px)
			font-size 1em
		
		@media (min-width:1920px)
			font-size 1.2em
		
		
		strong
			font-family 'Gotham Book'

.column.text,
.columns.text
	padding-left calc(1.215em + 5px)
	padding-left -webkit-calc(1.215em + 5px)
	
	@media (min-width 1024px)
		padding-left 22px
		
.columns img
	margin-bottom 1em
	width 100%
	
	@media (max-width:640px)
		padding 0
	

blockquote,
p
	font-family 'Gotham Book'
	font-size 1.25em
	line-height 2
	margin-left 0
	margin-right 0
	
	@media (max-width:640px)
		font-size 1.1em
		line-height 1.25

blockquote
	margin-bottom 2em
	
cite
	font-style normal
	display block
	font-size 1em;

.columns h2 
	text-transform uppercase
	font-size 3em
	margin 0.5em 0 0 
	display inline-block
	letter-spacing 0.15em
	line-height 1
	
	.aboutAuthor
		margin-top 1.5em
	
.highlightBoxes .columns
	position relative
	
	@media (max-width: 639px)
		width 100%
		padding 0.6em 1.215em
		
	@media (min-width: 640px)
		padding-bottom 33%

.highlightBoxes .columns div.vaWrapper
	position absolute
	left 10px
	right 10px
	top 10px
	bottom 10px 
	text-align center
	line-height 1
	color #FFF
	font-family 'Gotham Light'
	text-transform uppercase
	
	@media (max-width: 639px)
		position relative
	
	@media (min-width: 640px) and (max-width: 690px)
		left 2px
		right 2px
		top 2px
		bottom 2px 
		
	&.share
		text-align center
		vertical-align middle
	
		@media (max-width: 639px)
			height 150px !important;
			
		.wrapper
			font-size 1em
			padding 0
			
			
			span		
				font-size 3em
				letter-spacing 6px
				display block
				
				@media (max-width: 640px)
					font-size 1.2em
					letter-spacing 3px
			
				@media (max-width: 960px)
					font-size 1.8em
					letter-spacing 5px
				
			.shareWidgets
				display inline-block
				width 22%
				height 60px
				font-size 0
				padding 0
				margin-top 10px
				text-align center
				
				@media (max-width: 639px)
					min-height 50px
					
				// @media (min-width: 640px) and (max-width: 690px)
				// 	width 45%
					
				img
					width auto
					vertical-align bottom
				
				
				
	&.more
		
		@media (max-width: 639px)
			height 150px !important;
			
		a 
			display inline-block
		
			span 
				display block
				
			@media (max-width: 639px)
				font-size 1.6em
				vertical-align middle
				
				span
					font-size 0.7em
					line-height 1.5
					letter-spacing 2px
					
			@media (min-width: 640px)
				font-size 1.25em
				
				span
					font-size 0.7em
					line-height 1.5
					letter-spacing 2px
			
			@media (min-width: 768px)
				font-size 1.2em
				
				span
					font-size 0.7em
					line-height 1.8
					letter-spacing 2px
			
			@media (min-width: 960px)
				font-size 1.3em
				
				span
					font-size 0.7em
					line-height 2
					letter-spacing 2px
			
			@media (min-width: 1024px)
				font-size 1.7em
				
				span
					font-size 0.7em
					line-height 2.2
					letter-spacing 3px
			
			@media (min-width: 1280px)
				font-size 1.8em
				
				span
					font-size 0.7em
					line-height 2.5
					letter-spacing 3px
			
			@media (min-width: 1920px)
				font-size 2.1em
				
				span
					font-size 0.7em
					line-height 2.5
					letter-spacing 3px

	&.mayLike 
		font-size 0.8em
		letter-spacing 2px
		
		.vaElement
			
			@media (max-width: 639px)
				padding 10px 0

			span
				margin 5px auto

			img
				width 60%
				display block
				margin 10px auto 10px
			
	&.trailer
		font-size 1.3em
		line-height 1
		letter-spacing 2px
		
		div
			padding 0px
			
			@media (max-width: 639px)
				padding 10px
		
		h3 
			width 60%
			margin 10px auto
			text-align center
			
			@media (min-width: 641px)
				width 150px
			@media (min-width: 801px)
				width 200px
		
		img, video
			margin 5px auto
			width 240px
			
			@media (min-width:640px) and (max-width: 800px)
				width 150px /* Bug Fix, only works with px */
				
			@media (min-width:801px) and (max-width: 1060px)
				width 200px /* Bug Fix, only works with px */
			
			@media (min-width:1280px)
				width 260px /* Bug Fix, only works with px */
				
	&.white.guide
		color #b34ec6;
		
		@media (max-width: 639px)
			height 150px !important;
		
		a 
			width 60%
			text-align center
			font-size 25px
			line-height 30px
			display inline-block
			
			@media (max-width: 820px)
				width 80%	

	&.events
		.vaElement
			@media (max-width: 639px)
				padding 10px
				
			@media (min-width:641px) and (max-width: 800px)
				width 150px /* Bug Fix, only works with px */
				
			@media (min-width:801px) and (max-width: 1060px)
				width 200px /* Bug Fix, only works with px */
		h3
			font-size 1.8em
			margin 10px 0
			letter-spacing 2px
		
		h4, a
			font-size 0.8em
			text-transform uppercase
			font-family 'Gotham Light'
			margin-bottom 0px
			
		p 	
			font-family 'Gotham Light'
			font-size 0.9em
			text-transform none
			line-height 1.5
			margin-bottom 20px
		
		@media (min-width:640px) and (max-width: 768px)
			h3
				font-size 1.6em
			
			h4, a 
				font-size 0.7em
			
