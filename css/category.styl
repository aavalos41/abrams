#slider.full 
	margin-bottom 1.125em

#results .book
	background-color: #F4F4F4
	width 100%
	height 100%
	display block
	
#results .featured .book 
	background-color: inherit
		
#results ul li
	height 340px
	
	@media (min-width:641px) and (max-width:768px)
		height 320px
	
	@media (min-width:769px) and (max-width:1024px)
		height 410px
		
	@media (min-width:1025px) and (max-width:1279px)
		height 460px
		
	@media (min-width:1280px)
		height 390px

#results ul li,
#results .columns
	text-align center
	padding 1.215em
	font-family "Gotham Light"
	
	
	:before { /* styles for centering vertically*/
		content: '';
		display: inline-block;
		height: 100%;
		vertical-align: middle;
		margin-right: -0.25em; /* Adjusts for spacing */
}
	
	img 
		margin 2em auto
		width 70%	
		display: inline-block; /* styles for centering vertically*/
		vertical-align: middle; /* styles for centering vertically*/
		
		@media (max-width:640px)
			width 10.625em
			margin 1.5em auto
		
		@media (min-width:641px) and (max-width: 720px)
			width 9em
			margin 1.6em auto
		@media (min-width: 1280px)
			width 11em
			
	.featured
		color #FFF;
		text-transform uppercase
		font-size 1.5em
		width 100%
		padding 1.215em
		
		img
			margin 1em auto
			display block
		
		.author
			font-size 0.5em
			display block
		
		@media (min-width: 1024px)
			font-size 2em
			
	&.sort
		color #FFF
		text-transform uppercase
		display table
		
		.vaWrapper
			display table-cell
			width 99%
			height 100%
			vertical-align middle
		
			@media (min-width: 320px) and (max-width: 639px)
				height 200px
				display block
				width 254px
				margin 0 auto
			
		@media (max-width: 450px)
			font-size 0.8em
			
		@media (min-width: 1024px)
			font-size 1.2em
			
		b 
			font-size 2.3em
			display block
			font-weight normal
			letter-spacing 3px
			
		span
			background url(../images/arrowDown.png) no-repeat right 3px
			font-size 1em
			display block
			padding 0 40px
			letter-spacing 1px
			margin 0 1em 0 -1em
			line-height 1
			
			@media (min-width: 320px)
				padding 0 25px 0 10px
				background-size 12%
				margin 0 5px 0 0
				letter-spacing 0px
				font-size 1.1em
				
			@media (min-width: 641px) and (max-width: 768px)
				padding 0 40px 0 20px
				background-size 15%
				margin 0 0.5em 0 -0.5em
				letter-spacing 0px
				font-size 0.8em
				
#results .small-6,
#results li	
	
	@media (min-width: 320px) and (max-width: 639px)
		width 100%

.paginationWrapper
	color #FFF
	text-transform uppercase
	padding  2em 1em
	
	.pagination
		margin 1em 0
		
		@media (min-width: 320px) and (max-width: 639px)
			text-align center
			
		@media (min-width: 961px) and (max-width: 1023px)	
			float right
			margin-top -50px
		@media (min-width: 1024px)
			float right
			
	.displaying
		font-size 1.5em
		
		@media (min-width: 320px) and (max-width: 639px)
			font-size 1.1em
			text-align center
	
	.products
		font-size 1.1em
		
		@media (min-width: 320px) and (max-width: 639px)
			font-size 0.9em
			text-align center
		
.no-padding
	padding 0 !important


