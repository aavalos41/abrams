#results ul li 
	padding-top 10px
	
	a 
		font-size 1.125em
		color #b08401
		position relative
		padding-bottom 31px
		text-transform uppercase

	img
		display block
		height 195px
		margin-top 1em
		
		@media (min-width:641px) and (max-width: 768px)
			height 286px
		@media (min-width:769px) and (max-width: 960px)
			height 222px
		@media (min-width:1024px) and (max-width: 1279px)
			height 243px
		@media (min-width: 1280px)
			height 219px
	
	.text 
		position absolute
		top 222px
		left 5px
		right 5px
		line-height 1
		text-align center
		
		@media (min-width:641px) and (max-width: 768px)
			top 315px
		@media (min-width:769px) and (max-width: 959px)
			top 263px
		@media (min-width:960px) and (max-width 1023px)
			top 225px
		@media (min-width:1024px) and (max-width: 1279px)
			top 270px
		@media (min-width: 1280px)
			top 250px
			

	.clickToRead
		font-family 'Gotham Book'
		font-weigth bold
		line-height 35px
		background-color: rgba(0,0,0,0.8)
		border-radius 4px
		color #FFF
		width 110px
		height 35px
		position absolute
		margin auto
		top 128px
		left 0
		right 0
		font-size 0.6em
		text-transform none
		display none /* use meanwhile the images have the tag */
		
		
			
		
.highlightBoxes 
	margin-left -10px
	padding-left 0px
	padding-right 0
	
	@media (min-width 641px) and (max-width 1024px)
		padding-left 0.8em
		padding-right 0.8em
	
	@media (min-width 1025px)
		padding-right 1.2em
	
	ul
		margin 0
		
		li
			position relative
			left 0px !important
			right 0px !important
		
			@media (max-width: 639px)
				width 100%
				padding 0.6em 0.8em
				
			@media (min-width: 640px)
				padding-bottom 33%
				
			@media (min-width: 1025px)
				padding-left 0.6rem
				padding-right 0.6rem
				&:nth-of-type(3n+1),
				&.no-padding-left
					padding-left 0px
					padding-right 1.2rem
				&:nth-of-type(3n+3),
				&.no-padding-right
					padding-right 0px
					padding-left 1.2rem
		
.highlightBoxes ul .vaWrapper
	position absolute
	top 10px
	bottom 10px 
	text-align center
	line-height 1
	color #FFF
	font-family 'Gotham Light'
	text-transform uppercase
	
	@media (max-width: 639px)
		position relative
	
		
	&.share
		text-align center
		vertical-align middle
		left 0px
		right 20px
	
		@media (max-width: 639px)
			height 150px !important;
		
		@media (min-width: 640px) and (max-width: 690px)
			left 0px
			right 4px
			top 2px
			bottom 2px 
			
		.wrapper
			font-size 1em
			padding 0
			
			
			span		
				font-size 3em
				letter-spacing 6px
				display block
				
				@media (max-width: 640px)
					font-size 1.2em
					letter-spacing 3px
			
				@media (max-width: 960px)
					font-size 1.8em
					letter-spacing 5px
				
			.shareWidgets
				display inline-block
				width 22%
				height 60px
				font-size 0
				padding 0
				margin-top 10px
				text-align center
				
				@media (max-width: 639px)
					min-height 50px
					
				// @media (min-width: 640px) and (max-width: 690px)
				// 	width 45%
					
				img
					width auto
					height auto
					vertical-align bottom
				
				
				
	&.more
		left 10px
		right 10px
		
		@media (max-width: 639px)
			height 150px !important;
			left 0px
			right 0px
			
		@media (min-width: 640px) and (max-width: 690px)
			left 2px
			right 2px
			top 2px
			bottom 2px 

			
		a 
			display inline-block
		
			span 
				display block
				
			@media (max-width: 639px)
				font-size 1.6em
				vertical-align middle
				
				span
					font-size 0.7em
					line-height 1.5
					letter-spacing 2px
					
			@media (min-width: 640px)
				font-size 2.25em
				letter-spacing 1px
				
				span
					font-size 0.7rem
					line-height 1.5
					letter-spacing 1px
			
			@media (min-width: 768px)
				font-size 2.1em
				letter-spacing 2px
				
				span
					font-size 0.7rem
					line-height 1.8
					letter-spacing 2px
			
			@media (min-width: 960px)
				font-size 2.3em
				letter-spacing 4px
				
				span
					font-size 0.7rem
					line-height 2
					letter-spacing 2px
			
			@media (min-width: 1024px)
				font-size 2.7em
				letter-spacing 4px
				
				span
					font-size 0.7rem
					line-height 2.2
					letter-spacing 3px
			
			@media (min-width: 1280px)
				font-size 3.25em
				letter-spacing 5px
				
				span
					font-size 0.625rem
					line-height 2.5
					letter-spacing 3px
			
			@media (min-width: 1920px)
				font-size 2.1em
				
				span
					font-size 0.7em
					line-height 2.5
					letter-spacing 3px
					
	&.mayLike 
		font-size 0.875rem
		letter-spacing 2px
		left 20px
		right 0px
		
		@media (max-width: 639px)
			left 0px
			right 0px
		@media (min-width: 640px) and (max-width: 690px)
			left 4px
			right 0px
			top 2px
			bottom 2px 

		
		.vaElement
			
			@media (max-width: 639px)
				padding 10px 0

			span
				margin 5px auto

			img
				width 60%
				display block
				margin 20px auto 10px
				
				@media (min-width: 1280px)
					width 190px
					margin-top 10px